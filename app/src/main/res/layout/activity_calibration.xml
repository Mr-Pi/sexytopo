<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.hwyl.sexytopo.control.activity.CalibrationActivity">

    <Button
        android:id="@+id/calibration_start"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textAlignment="gravity"
        android:gravity="center"
        android:text="@string/calibration_start"
        android:enabled="true"
        android:onClick="requestStartCalibration"
        />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#dddddd">
        <TableRow>
            <TextView
                android:text="@string/calibration_index"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:gravity="start"
                />
            <TextView
                android:id="@+id/calibration_index"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:gravity="end"/>
        </TableRow>
    </TableLayout>



    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1">
        <TableRow>
            <TextView
                android:text="Gx"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:gravity="start"
                />
            <TextView
                android:id="@+id/calibrationFieldGx"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:gravity="end"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="Gy"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:gravity="start"
                />
            <TextView
                android:id="@+id/calibrationFieldGy"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:gravity="end"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="Gz"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:gravity="start"
                />
            <TextView
                android:id="@+id/calibrationFieldGz"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:gravity="end"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="Mx"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:gravity="start"
                />
            <TextView
                android:id="@+id/calibrationFieldMx"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:gravity="end"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="My"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:gravity="start"
                />
            <TextView
                android:id="@+id/calibrationFieldMy"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:gravity="end"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="Mz"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:gravity="start"
                />
            <TextView
                android:id="@+id/calibrationFieldMz"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:gravity="end"/>
        </TableRow>
    </TableLayout>


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:padding="5dp"
        android:background="#dddddd">
        <TableRow>
            <TextView
                android:text="@string/calibration_next_step"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:gravity="start"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:text="@string/calibration_direction"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:gravity="start"
                />
            <TextView
                android:id="@+id/calibration_next_direction"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:gravity="end"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="@string/calibration_orientation"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:gravity="start"
                />
            <TextView
                android:id="@+id/calibration_next_orientation"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:gravity="end"/>
        </TableRow>
    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1">
        <TableRow>
            <TextView
                android:text="@string/calibration_assessment"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:gravity="start"
                />
            <TextView
                android:id="@+id/calibrationFieldAssessment"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:gravity="end"/>
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/calibration_complete"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textAlignment="gravity"
        android:gravity="center"
        android:text="@string/calibration_complete"
        android:onClick="completeCalibration"
        />

    <Button
        android:id="@+id/calibration_stop"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textAlignment="gravity"
        android:gravity="center"
        android:text="@string/calibration_stop"
        android:enabled="true"
        android:onClick="requestStopCalibration"
        />

</LinearLayout>
